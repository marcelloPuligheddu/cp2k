&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT LiH_bulk_3
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ./MOD_BASIS_OPT
    POTENTIAL_FILE_NAME ./POTENTIAL
    &MGRID
      CUTOFF 100
      REL_CUTOFF 20
    &END MGRID
    &QS
      MIN_PAIR_LIST_RADIUS -1
      EPS_DEFAULT 1.0E-9
      METHOD GAPW
    &END QS
    &POISSON
       POISSON_SOLVER PERIODIC
    &END
    &SCF
      EPS_SCF 1.0E-9
      MAX_SCF 20
      SCF_GUESS ATOMIC
      &OT
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &PRINT
        &RESTART OFF
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &HF
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 6.0
          POTENTIAL_TYPE TRUNCATED
          T_C_G_DATA ./t_c_g.dat
        &END INTERACTION_POTENTIAL
        &MEMORY
          EPS_STORAGE_SCALING 1.0E-12
          MAX_MEMORY 0
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-16
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.252 12.252 12.252
    &END CELL
    &COORD
      H 2.042 8.168 0
      H 2.042 10.21 2.042


    &END COORD
    &KIND H
      BASIS_SET MP1
      POTENTIAL ALL 
    &END KIND
    &KIND Li
      BASIS_SET MP0
      POTENTIAL ALL 
    &END KIND

  &END SUBSYS
&END FORCE_EVAL
