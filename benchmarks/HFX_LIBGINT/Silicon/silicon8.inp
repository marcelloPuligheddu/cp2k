&GLOBAL
  PROJECT silicon8
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME  ./basis.inp
    POTENTIAL_FILE_NAME  POTENTIAL
    &POISSON
      PERIODIC XYZ
    &END POISSON
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-8
      MAX_SCF 500
    &END SCF
    &XC
      &HF
        HFX_LIBRARY libint
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 2.6
          POTENTIAL_TYPE TRUNCATED
          T_C_G_DATA ./t_c_g.dat
        &END INTERACTION_POTENTIAL
        &MEMORY
          EPS_STORAGE_SCALING 0.1
          MAX_MEMORY 1000
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-9
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &KIND Si
      ELEMENT   Si
      BASIS_SET SI_1
      POTENTIAL GTH-PBE
    &END KIND
    &CELL
      ABC 5.430697500 5.430697500 5.430697500
      PERIODIC XYZ
    &END CELL
    &COORD
      SCALED
      Si    0    0    0
      Si    0    2/4  2/4
      Si    2/4  2/4  0
      Si    2/4  0    2/4
      Si    3/4  1/4  3/4
      Si    1/4  1/4  1/4
      Si    1/4  3/4  3/4
      Si    3/4  3/4  1/4
    &END COORD
  &END SUBSYS
&END FORCE_EVAL

