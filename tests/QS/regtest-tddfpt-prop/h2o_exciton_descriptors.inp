&GLOBAL
  PRINT_LEVEL LOW
  PROJECT exciton_descriptor_test
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &MGRID
      CUTOFF 280
      REL_CUTOFF 60
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      MAX_SCF 50
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-7
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE [eV] 1.0e-7
      DIRECTIONAL_EXCITON_DESCRIPTORS T
      EXCITON_DESCRIPTORS T
      KERNEL FULL
      MAX_ITER 50
      NSTATES 5
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC [angstrom] 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000    0.000000
      H   0.000000   -0.757136    0.580545
      H   0.000000    0.757136    0.580545
    &END COORD
    &KIND H
      BASIS_SET DZV-GTH-PBE
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q6
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
