&GLOBAL
  PREFERRED_DIAG_LIBRARY SL
  PRINT_LEVEL LOW
  PROJECT NO_tddfpt-t-2
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    LSD T
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 260
    &END MGRID
    &QS
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 15
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE 1.0e-5
      MAX_ITER 10
      MAX_KV 30
      NSTATES 3
      OE_CORR SAOP
      RKS_TRIPLETS T
      &XC
        &XC_FUNCTIONAL PADE
        &END XC_FUNCTIONAL
        &XC_GRID
          XC_DERIV NN4_SMOOTH
        &END XC_GRID
      &END XC
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      O   0.100000    0.000000    0.542338
      N   0.000000    0.300000   -0.619815
    &END COORD
    &KIND N
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q5
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
